{
    "autosave": "on_focus_change",
    "auto_signature_help": true,
    "inlay_hints": {
        "enabled": true,
        "show_value_hints": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "show_background": false,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50,
        "toggle_on_modifiers_press": {
            "control": false,
            "alt": false,
            "shift": false,
            "platform": false,
            "function": false
        }
    },
    "icon_theme": "Zed (Default)",
    "experimental.theme_overrides": {
        "editor.active_line.background": "#3b2880",
        "editor.active_line_number": "#ffffff",
        "tab.active_background": "#3b2880"
    },
    "tabs": {
        "git_status": true
    },

    "git_panel": {
        "dock": "right"
    },
    "git": {
        "inline_blame": {
            "show_commit_summary": true,
            "padding": 15
        }
    },

    "terminal": {
        "dock": "bottom"
    },
    "active_pane_modifiers": {
        "border_size": 3
    },
    "features": {
        // Which edit prediction provider to use.
        "edit_prediction_provider": "none"
    },
    "show_completions_on_input": false,
  
    // Makes lines to see where I should be limiting line lengths (python: 79)
    "wrap_guides": [79, 100, 120],
    "base_keymap": "VSCode",
    "vim_mode": true,
    "ui_font_size": 16,
    "buffer_font_size": 17.0,
    "theme": {
        "mode": "dark",
        "light": "Catppuccin Frappé",
        "dark": "Catppuccin Frappé - No Italics"
    },
    "telemetry": {
        "diagnostics": true,
        "metrics": true
    },
    "tab_size": 4,
    "file_types": {
        "Dockerfile": ["Dockerfile*"],
        "nextflow": ["nf"]
    },

    "languages": {
        "nextflow": {
            "formatter": "language_server",
            "language_servers": ["nls"]
        },
        "Python": {
            "language_servers": [
                // Disable basedpyright and enable Ty, and otherwise
                // use the default configuration.
                "ty",
                "!basedpyright"
            ]
        }
    },
    "lsp": {
        "ruff": {
            "initialization_options": {
                "settings": {
                    "exclude": ["*"]
                }
            }
        },
        // This is a development plugin
        "nextflow": {
            "initialization_options": {
                "enable_autofix": true,
                "inlay_hints_hide_redundant_param_names": true,
                "warn_style": true,
                "highlight_global_var_declarations": true
            }
        }
    }
}
